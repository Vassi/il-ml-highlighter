{
    "comments": {
        "lineComment": "//",
        "blockComment": ["/*", "*/"]
    },
    "brackets": [
        ["/# ", "#/"],
        ["<<", ">>"],
        ["<", ">"],
        ["/*", "*/"],
        ["```", "```"]
    ],
    "autoClosingPairs": [
        {
            "open": "/# ",
            "close": "\n#/"
        },
        {
            "open": "<<",
            "close": ">>"
        },
        {
            "open": "<",
            "close": ">"
        },
        {
            "open": "/*",
            "close": "*/"
        },
        {
            "open": "```",
            "close": "```"
        }
    ],
    "surroundingPairs": [
        ["<<", ">>"],
        ["<", ">"],
        ["/*", "*/"],
        ["```", "```"]
    ],
    "folding": {
        "markers": {
            "start": "^\\s*(\\/# \\s*[A-Z]+:|<[A-Za-z][A-Za-z0-9_]*>|/\\*|```)",
            "end": "^\\s*(#\\/|</[A-Za-z][A-Za-z0-9_]*>|\\*/|```)"
        }
    },
    "indentationRules": {
        "increaseIndentPattern": "^\\s*(\\/# \\s*[A-Z]+:|##\\s+|<[A-Za-z][A-Za-z0-9_]*>|```)",
        "decreaseIndentPattern": "^\\s*(#\\/|</[A-Za-z][A-Za-z0-9_]*>|```)"
    }
}